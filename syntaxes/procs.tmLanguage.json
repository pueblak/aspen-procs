{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Procs",
	"fileTypes": [
		".EXT"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#labels" },
		{ "include": "#keywords" },
		{ "include": "#storages" },
		{ "include": "#synonyms" },
		{ "include": "#constants" },
		{ "include": "#strings" },
		{ "include": "#variables" }
	],
	"repository": {
		"constants": {
			"patterns": [{
				"name": "constant.numeric.procs",
				"match": "\\b\\d+(.\\d+)?\\b"
			},
			{
				"name": "constant.language.procs",
				"match": "\\b(YES|NO)\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.parameter.defined.procs",
				"match": "(((?<=^S AS)|(?<=^S DS)|(?<=^C IC)|(?<=^C DC))\\s+[a-zA-Z_]\\w*\\b)|((?<=^\\/ RD)\\s+(\\(?\\d+\\s*,?\\s*\\d+\\)?\\s+)[a-zA-Z_]\\w*\\b)"
			}]
		},
		"synonyms": {
			"patterns": [{
				"name": "constant.character.reference.procs",
				"match": "@+[a-zA-Z_]\\w*\\.?((?=$)|(?=[\\s\\w:(@\")\\]}]))"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "support.function.procs",
				"match": "^:[A-Za-z_]\\w+\\b"
			},
			{
				"name": "support.class.procs",
				"match": "\\(\\b[^,]+\\b\\)"
			},
			{
				"name": "invalid.illegal.procs",
				"match": "\\[\\b.+\\b\\]"
			},
			{
				"name": "entity.name.function.procs",
				"match": "\\{\\b.+\\b\\}"
			}]
		},
		"storages": {
			"patterns": [{
				"name": "storage.type.procs",
				"match": "@*\\b(\\d+)(:\\d+)?[^G]\\b"
			},
			{
				"name": "storage.modifier.procs",
				"match": "@*\\b(\\d+|[a-zA-Z_]\\w*\\.?)(:\\d+)?G(\\s|$)"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.command.procs",
				"match": "(^(S (AS|DS)|C (IC|DC)|F (CR|DL|EX)|\\/ (DI|CC|CS|CL|DL|PS)|G AG|L AL|!|#|\\?|&( \\$)?))|(\\b(EQ|GT|LT|NE|GE|LE)\\b)|(\\/ RD\\s+(\\(?\\d+\\s*,?\\s*\\d+\\)?\\s+))"
			},
			{
				"name": "keyword.control.reserved.procs",
				"match": "(?<=\\W)@?(LDA\\$\\$\\$|ASPEN_HOME|AUTHNO|COBOL(PGM|_SUFFIX|_TAIL)?|COL|DATE|DEOP|EOPMESS|LINK(DATE|TIME)|MENUHEAD|(MAIN|NEXT)MENU|MODE|NO_HALT|OS|PATH|PROCDUMP|PROMPT_VAL|RMRC|ROW|RUNPATH|ST_DIR|START|SYSRC|TERMNO|TIME|USER(ID|TERM))\\b\\.?"
			},
			{
				"name": "keyword.control.access.procs",
				"match": "((\\$|\\d*:)\\d+\\b)|(\\((L|R|\\d+)\\s*,\\s*\\d+\\))"
			}]
		},
		"strings": {
			"name": "string.quoted.double.procs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.procs",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.procs",
				"match": "\\*.*"
			}]
		}
	},
	"scopeName": "source.procs"
}