{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Procs",
	"fileTypes": [
		".EXT"
	],
	"patterns": [
		{
			"include": "#constants"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#storages"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#synonyms"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.procs",
				"match": "(^(S (AS|DS)|C (IC|DC)|F (CR|DL|EX)|\\/ (DI|RD|CC|CS|CL|DL|PS)|G AG|L AL|!|#|\\?|&( \\$)?))|(\\b(EQ|GT|LT|NE|GE|LE)\\b)"
			},
			{
				"name": "keyword.operator.procs",
				"match": "\\W@?(LDA\\$\\$\\$|ASPEN_HOME|AUTHNO|COBOL(PGM|_SUFFIX|_TAIL)?|COL|DATE|DEOP|EOPMESS|LINK(DATE|TIME)|MENUHEAD|(MAIN|NEXT)MENU|MODE|NO_HALT|OS|PATH|PROCDUMP|PROMPT_VAL|RMRC|ROW|RUNPATH|ST_DIR|START|SYSRC|TERMNO|TIME|USER(ID|TERM))\\.?\\b"
			},
			{
				"name": "keyword.other.procs",
				"match": "((\\$|[0-9]*:)[0-9]+\\b)|(\\((L|R|[0-9]+)\\s*,\\s*[0-9]+\\))"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.numeric.procs",
				"match": "\\b[0-9]+(.[0-9]+)?\\b"
			},
			{
				"name": "constant.language.procs",
				"match": "\\b(YES|NO)\\b"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.parameter.procs",
				"match": "(((?<=^S AS)|(?<=^C IC)|(?<=^C DC))\\s+[a-zA-Z_]\\w*\\b)|((?<=^\\/ RD)\\s+(\\(?[0-9]+\\s*,?\\s*[0-9]+\\)?\\s+)[a-zA-Z_]\\w*\\b)"
			}]
		},
		"synonyms": {
			"patterns": [{
				"name": "constant.character.procs",
				"match": "@+[a-zA-Z_][a-zA-Z0-9_]*\\.?((?=$)|(?=[\\s\\w:(@\")\\]}]))"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "support.function.procs",
				"match": "^:[A-Za-z_]\\w+\\b"
			},
			{
				"name": "support.class.procs",
				"match": "\\(\\b[^,]+\\b\\)"
			},
			{
				"name": "invalid.illegal.procs",
				"match": "\\[\\b.+\\b\\]"
			},
			{
				"name": "entity.name.function.procs",
				"match": "\\{\\b.+\\b\\}"
			}]
		},
		"storages": {
			"patterns": [{
				"name": "storage.type.procs",
				"match": "@*\\b([0-9]+)(:[0-9]+)?[^G]\\b"
			},
			{
				"name": "storage.modifier.procs",
				"match": "@*\\b([0-9]+|[a-zA-Z_]\\w*\\.?)(:[0-9]+)?G(\\s|$)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.procs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.procs",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.procs",
				"match": "\\*.*"
			}]
		}
	},
	"scopeName": "source.procs"
}